<% if session[:user_id] = @space.user.id %>
  Update:
  <form action='/space/<%= @space.id %>/edit' method ='get'>
    <input type = 'submit' name = 'Update' value = 'Update' >
  </form>
  Delete:
  <form action='/space/<%= @space.id %>/delete' method ='get'>
    <input type = 'submit' name = 'Delete' value = 'Delete' >
  </form>
<% end %>

<h4>Make a booking request:</h4>
<form action="/reservations" method="POST">
  <input type="hidden" name="space_id" value=<%= @space.id %>>
  <select name="date">
    <% @availability.each do |day| %>
      <% unless day[:available] == :booked %>
        <option value=<%= day[:date] %>><%= day[:date] %></option>

<p>Owned by: <%= @space.user.username %></p>
<p>Contact: <%= @space.user.email %></p>
  <% end %>
<% end %>
<% unless @space.user.id == session[:user_id] %>
  <h4>Make a booking request:</h4>
  <form action="/reservations" method="POST">
    <input type="hidden" name="space_id" value=<%= @space.id %>>
    <select name="date">
      <% @availability.each do |day| %>
        <% unless day[:available] == :booked %>
          <option value=<%= day[:date] %>><%= day[:date] %></option>
        <% end %>
      <% end %>
    </select>
    <input type="submit" value="Request">
  </form>
<% end %>

<h4>November</h4>
<div class="calendar">
  <% @availability.each do |day| %>
    <div class="calendar-day <%= day[:available] %>">
      <span><%= day[:date].day %></span>
    </div>
  <% end %>
</div>

